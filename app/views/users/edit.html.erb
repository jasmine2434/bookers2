<h1>Users Edit Page</h1>

  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  
  <main>
    <p class="notice"><%= notice %></p>
      <%= yield %>
  </main>
  
  <h2>User info</h2>
    <div class="container">
    <div class="row">
      
      <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label>
          <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
        
        <label for="inputImage">Image</label>
          <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          
        <label for="inputtext">introduction</label>
          <p><%= f.text_area :introduction %></p>
          
        <%= f.submit "Update User", method: :update, class: "btn btn-secondary" %>
        
      <% end %>
    </div>
  </div>